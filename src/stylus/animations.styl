/**
 * # Animaciones
 */

@keyframes fade-in-down {
    0% {
        opacity: 0;
        transform: translateY(-10px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes bounce {
    0%, 20%, 85%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-10px);
    }
    50% {
        transform: translateY(4px);
    }
    60% {
        transform: translateY(-5px);
    }
    70% {
        transform: translateY(2px);
    }
}
