.Header
    background-color $black
    overflow hidden
    color $silver
    padding 0.5rem 1rem
    font-family $alternativeFontFamily

    .name
        margin 0 auto
        font-size 1.2em
        max-width 38rem

    .job
        margin 0 auto
        font-size 1.1em
        max-width 38rem
        color #aca

    .social-links
        margin 0 auto
        max-width 38rem

    .icon
        vertical-align bottom

    .social-link:not(:hover)
        color #ddd

    .email
        font-size: 0.8em
