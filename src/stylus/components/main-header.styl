// Cabecera
.MainHeader
    text-align center
    position relative
    padding 0 0 2em
    min-height 9em
    background none no-repeat scroll center center / cover $black
    overflow hidden
    color $white
    text-shadow 0 0 .2em $black

    &-content
        margin 2em auto
        max-width 45em

    // Título
    .home-template &-title
        animation 0.6s ease 0.2s normal none 1 running fade-in-down

    &-title
        font-size 2em
        margin .2em 0

    // Descripción
    .home-template &-description
        animation 0.9s ease 0.1s normal none 1 running fade-in-down
        -webkit-animation 0.9s ease 0.1s normal none 1 running fade-in-down

    &-description
        margin 0
        font-size 1.2em
        font-weight 300
        color rgba(255, 255, 255, 0.7)

    &-social
        font-size 2.4em
        display flex
        justify-content center
        margin .5em 0 .3em
        height 1em

        a
            color rgba($white, .8)
            margin 0 .2em

            &:hover
                color $white

    &-email
        display block
        font-family $alternativeFontFamily

    &-links
        font-weight 300
        margin 1em
        font-family $alternativeFontFamily

        a
            color $silver

            &:hover
                color $green4

            &:not(:last-child)::after
                color $silver
                content ' |'

    &-scrollToContent
        outline 0
        display block
        position absolute
        bottom 0
        left 50%
        margin-left -1em
        width 2em
        height 1em
        font-size 3em
        text-decoration none
        color rgba(255, 255, 255, 0.6)
        animation 4s ease 2s normal none infinite running bounce

        svg
            stroke rgba(black, .1)

        &:hover
            color rgba(255, 255, 255, 0.8)

        > span
            display none

@media all and (min-width $bp-large)
    .home-template .MainHeader
        font-size 1.2rem
        height 100vh
        display flex
        flex-direction column
        justify-content space-around
        padding 0

        &-content
            vertical-align middle
