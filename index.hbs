{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="MainHeader{{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}--noCover{{/if}}">
    <nav class="MainNav{{#if @blog.cover}}{{else}}--noCover{{/if}}">
        {{#if @blog.logo}}<a class="Logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Logo" /></a>{{/if}}
    </nav>
    <div class="MainHeader-content">
        <h1 class="MainHeader-title">{{@blog.title}}</h1>
        <h2 class="MainHeader-description">{{@blog.description}}</h2>
        <div class="MainHeader-social">
            <a target="_blank" href="https://twitter.com/abalozz" class="icon-twitter"></a>
            <a target="_blank" href="https://plus.google.com/u/0/+IvÃ¡nAbascalLozano" class="icon-google-plus"></a>
            <a target="_blank" href="https://www.facebook.com/ivan.abascallozano" class="icon-facebook"></a>
            <a target="_blank" href="https://github.com/abalozz" class="icon-github"></a>
            <a target="_blank" href="http://codepen.io/abalozz/" class="icon-codepen"></a>
            <a target="_blank" href="https://www.linkedin.com/profile/view?id=359300271" class="icon-linkedin"></a>
            <a href="skype:alivanprox" class="icon-skype"></a>
            <span class="MainHeader-email">abalozz@outlook.com</span>
        </div>
        <div class="MainHeader-links">
            {{navigation}}
        </div>
    </div>
    <a class="MainHeader-scrollToContent icon-arrow-left" href="#blog" data-scroll-down=""><span>Scroll Down</span></a>
</header>

